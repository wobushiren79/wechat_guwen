@import 'style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: "Microsoft Yahei";
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: center;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: center;
    font-size: 14px;
}
.weui-cell_input .icon image{
    width: 23px;
    height: 23px;
    display: block;
}
.weui-cell_input .icon{
    position: absolute;
    top: 12px;
    right: 12px
}
.weui-cell_input_icon{
    padding-right: 30px;
}