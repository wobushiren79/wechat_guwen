/*tab*/
.tab{
    text-align: center;
    /* padding: 20rpx 0; */
    /* border-bottom: 1px solid #3eac90; */
    height: 115rpx;
    background-color: #FFFFFF;
    box-sizing: border-box;
}
.tab view{
    display: block;
    float: left;
    width: 25%;
    line-height: 111rpx;
    font-size: 28rpx;
    color: #a9a9a9;
}
.tab view navigator{
    display: inline-block;
}
.tab navigator.active{
    color: #48cfad;
    border-bottom: 2px solid #48cfad;
}
.wxParse-img{
    /*background-color: #efefef;*/
    overflow: hidden;

    /*dqr_20170617*/
    margin-left:-2em;

}

/*清楚浮动*/
.clearfix::after{
  content: "";
  display: block;
  clear: both;
  height: 0;
  font-size: 0;
}
.clearfix{
  zoom: 1
}

input{
  font-family: "Microsoft Yahei"!important;
}

.aui-ellipsis-1{
    display: -webkit-box!important;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    word-break: break-all;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.mask{

    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 8;
}

/* 置底页脚 */
.footerfix button{
  border-radius: 0;
}


