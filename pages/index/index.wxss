/* banner */
.section_banner{
  height: 350rpx;
  background: #48cfad;
  padding-top: 90rpx;
  box-sizing: border-box;
}
.section_banner image{
  width: 90rpx;
  display: block;
  margin: auto;
}
.section_banner .search{
  width: 570rpx;
  margin: auto;
  position: relative;
}
.section_banner .search image{
  display: block;
  width: 30rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}
.section_banner .search image.icon_search{
  left: 30rpx;
}
.section_banner .search image.icon_sm{
  right: 30rpx;
}
.section_banner .search input{
  display: block;
  width: 100%;
  background: #ffffff;
  border-radius: 40rpx;
  height: 65rpx;
  line-height: 65rpx;
  margin-top: 80rpx;
  font-size: 24rpx;
  text-align: center;
  padding: 0 90rpx;
  box-sizing: border-box;
}
.input_placeholder{
  text-align: center;
  color: #909090;
}

/* flex */
.section_flex{
  padding: 24rpx 0;
  background: #ffffff;
}
.section_flex image{
  display: block;
  width: 96rpx;
  margin: auto;
}
.section_flex text{
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #353535;
  margin-top: 10rpx;
}
.section_flex .navigator-hover{
  background: #ffffff;
}

