/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #353535;
}

.usermotto {
  margin-top: 200px;
}

.weui-cells_after-title image {
  position: relative;
  top: -3px;
}

.weui-cells_after-title{
  margin-bottom: 0.3em;
  margin-top: 0.77em;
}
/*list标题*/

.weui-cell .weui-cell__bd .title {
  color: #000;
  font-size: 34rpx;
}

/*list文字*/

.weui-cell .weui-cell__bd .text {
  color: #a9a9a9;
  font-size: 26rpx;
  margin-top: 10rpx;
}

/*list图片*/

.weui-cell .weui-cell__hd image {
  margin-right: 45rpx;
  vertical-align: middle;
  width: 100rpx;
  height: 100rpx;
}

/*list分割线*/

.weui-cell:first-child::before {
  display: block;
}

/*右边小角*/

.weui-cell .weui-cell__ft image {
  vertical-align: middle;
  width: 12rpx;
  height: 24rpx;
}

.namenum text,
.namenum .exit{
  display: inline-block;
}
.namenum .exit{
   color: #48cfad;
  margin-left: 10rpx;
}
.placeholder{

    padding: 0 10px;
    text-align: center;
    background-color: #EBEBEB;
    height: 2.3em;
    line-height: 2.3em;
    color: #cfcfcf;
}

.userinfo{
  background: #ffffff;
  position: relative;
}
.userinfo view.num{
  position: absolute;
  /*background-color: #48cfad;*/
  width: 180rpx;
  height: 60rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  text-align: center;
  top: 50%;
  right: 15px;
  background: linear-gradient(to right, #48cfad 0%,#7fffeb 100%);
}
.userinfo>.exit{
  position: fixed;
  top: 16rpx;
  right: 15px;
  color: #48cfad;
  font-size: 28rpx;
}

.info{
  background-color: #ffffff;
  text-align: center;
  height: 150rpx;
  padding-top: 20px;
}
.info view{
  font-size: 28rpx;
  color: #353535;
  margin-bottom: 30rpx;
  margin-top: -10rpx;
}
.info text{
  font-size: 54rpx;
  color: #48cfad;
  
}
.info .weui-flex__item{
  border-left: 1rpx solid #D9D9D9;
  height: 130rpx;
}
.info .weui-flex__item:first-child{
  border-left: none;
}