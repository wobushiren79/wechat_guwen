<form bindsubmit="formSubmit">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">原价格(元)</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input"  disabled='true' value='{{price/100}}'/>
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">新价格(元)</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" type="text" placeholder="请输入新价格" name="now_price"/>
      </view>
    </view>
  </view>
  <view class="weui-btn-area">
    <button class="weui-btn" type="primary" formType="submit">确认修改</button>
  </view>
</form>