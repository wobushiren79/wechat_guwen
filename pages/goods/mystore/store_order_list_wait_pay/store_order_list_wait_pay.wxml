<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__bd page_service_order page_mystroe_service">
    <!--选项卡-->
    <view class="tab">
      <!-- <view>
        <navigator url="/pages/goods/mystore/store_order_list_submit/store_order_list_submit?storeId={{storeId}}" open-type="redirect" >待提交</navigator>
      </view> -->
      <view>
        <navigator url="/pages/goods/mystore/store_order_list_wait_pay/store_order_list_wait_pay?storeId={{storeId}}" open-type="redirect" class="active">待付款</navigator>
      </view>
      <view>
        <navigator url="/pages/goods/mystore/store_order_list_serviceing/store_order_list_serviceing?storeId={{storeId}}" open-type="redirect"  >服务中</navigator>
      </view>
      <view>
        <navigator url="/pages/goods/mystore/store_order_list_succeed/store_order_list_succeed?storeId={{storeId}}" open-type="redirect" >已服务</navigator>
      </view>
      <view>
        <navigator url="/pages/goods/mystore/store_order_list_closed/store_order_list_closed?storeId={{storeId}}" open-type="redirect" >已关闭</navigator>
      </view>
    </view>

    <!-- 列表 -->
    <view class="list">
      <view class="ul">

        <!-- 模板一 待付款-待支付 star-->
        <black wx:for="{{list}}">
        <view class="li">
          <view class="li_header">
            <view class="header">已确认</view>
            <view class="footer">￥<text>{{item.order_price/100}}</text></view>
          </view>
          <navigator url="/pages/goods/order/order_goods_content/order_goods_content?orderid={{item.id}}" class="li_body" hover-class="active">
            <image src="/images/right.png" class="icon"></image>
            <view class="address">
              <view class="header">
                治丧地址：
              </view>
              <view class="body">
                {{item.service_location}}
              </view>
            </view>
            <view class="name">
              <view class="header">
                客户：
              </view>
              <view class="body">
                {{item.customer_name}}
              </view>
            </view>
            <view class="time">
              <view class="header">
                时间：
              </view>
              <view class="body">
              <black wx:if="{{item.service_way == 1}}">
                <text >{{item.book_time}}</text>\r\n<text>进行服务</text>
                </black>
              <black wx:if="{{item.service_way == 0}}">
                <text ></text>\r\n<text>及时服务</text>
                </black>
              <black wx:if="{{item.service_way == 2}}">
                <text >{{item.book_time}}</text>\r\n<text>自提服务</text>
                </black>
              </view>
            </view>
          </navigator>
          <view class="li_footer">
            <view class="header" bindtap="tel" data-tel="{{item.customer_phone}}">
              <image src="/images/icon_call_phone.png"></image>联系客户
            </view>
            <view class="footer">
              <button type="primary" class="btn" bindtap="fukuang" data-orderid="{{item.id}}" data-store="{{1}}">付款</button>
              <!-- <button type="primary" class="btn" bindtap="EditPrice" data-orderid="{{item.id}}" data-price='{{item.order_price}}'>修改价格</button> -->
            </view>
          </view>
        </view>
        </black>
        <!-- 模板一 待付款-待支付 end-->
  <import src="/template/template.wxml"/>
  <block wx:if="{{xinshi}}">
  <block wx:if="{{list.length>0}}" >
  <template is="nonconformance"/>
  </block>
    <block wx:else>
    <template is="nullData"/>
    </block>
  </block>
      </view>
    </view>

  </view>


</view>