<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__bd clearfix">

    <form bindsubmit="formSubmit">
      <!-- 购置物品 -->
      <view class="goods_buy list ">
        <view class="dl ">

          <!-- 联系人 -->
          <view class="dd">
            <view class="header ">
              联系人
            </view>
            <view class="footer ">
              <input type="text" placeholder="收件人或经办人姓名" name="contact"/>
            </view>
          </view>

          <view class="dd">
            <view class="header ">
              电话
            </view>
            <view class="footer ">
              <input type="text" placeholder="联系人手机号" name="contactPhone" />
            </view>
          </view>

          <view class="dd">
            <view class="header">
              服务方式
            </view>
            <view class="footer">
              <text class="btn {{btn_1?'active':''}} " bindtap="bind_btn_1">及时服务</text>
              <text class="btn {{btn_2?'active':''}} " bindtap="bind_btn_2">预约服务</text>
            </view>
          </view>

          <view class="dd">
            <view class="header ">
              服务区域
            </view>
            <view class="footer ">
              <input placeholder="选择" value="{{province}}-{{city}}-{{county}}" focus="{{focus}}" bindfocus="open" name="serviceLocation"/>
            </view>
            <image src="../../images/right.png" class="icon"></image>
          </view>

          <view class="dd">
            <view class="header ">
              详细地址
            </view>
            <view class="footer ">
              <input type="text" placeholder="街道、小区、楼牌号等"  name="location"/>
            </view>
          </view>

          <black wx:if="{{btn_2}}">
            <view class="dd order_time">
              <view class="header ">
                预约日期
              </view>
              <view class="footer ">
                <picker mode="date" value="{{date}}" start="2015-09-01" end="2037-09-01" bindchange="bindDateChange">
                  <text>{{date}}</text>
                </picker>
              </view>
              <image src="../../images/right.png" class="icon"></image>
            </view>
            <view class="dd order_time">
              <view class="header ">
                预约时间
              </view>
              <view class="footer ">
                <picker mode="time" value="{{time}}" start="00:00" end="24:00" bindchange="bindTimeChange">
                  <text>{{time}}</text>
                </picker>
              </view>
              <image src="../../images/right.png" class="icon"></image>
            </view>
          </black>
        </view>
      </view>


      <!-- 省市区三级联动 star -->
      <view wx:if="{{condition}}" class="citypicker">
        <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange" class="citybody">
          <view class="cityheader">
            <view bindtap="open" class="city-cancel">取消</view>
            <view bindtap="open" class="city-true">确定</view>
          </view>
          <picker-view-column>
            <view wx:for="{{provinces}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
          </picker-view-column>
          <picker-view-column>
            <view wx:for="{{citys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
          </picker-view-column>
          <picker-view-column>
            <view wx:for="{{countys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
          </picker-view-column>
        </picker-view>
      </view>
      <!-- 省市区三级联动 end -->

      <!-- 固定底部 star -->
      <black wx:if="{{footer}}">
        <view class="footerfix clearfix">

          <!-- 保存 -->
          <button class="keep" form-type="submit">
            保存
          </button>
        </view>
      </black>
      <!-- 固定底部 end -->
    </form>







  </view>
</view>