.call{
  float: left;
  padding-left: 10rpx;
}
.call:active{
  opacity: 0.7;
}
.call image{
  width:50rpx;
  display: block;
  float: left;
}
.call text{
  display: block;
  float: left;
}
.page_service_order .list .ul .li .li_body>view.img_show{
  display: block;
}
.page_service_order .list .ul .li .li_body>view.img_show .header,
.page_service_order .list .ul .li .li_body>view.img_show .footer{
  width: 100%;
}
.page_service_order .list .ul .li .li_body>view.img_show .body{
  margin: 0 -10rpx;
}
.page_service_order .list .ul .li .li_body>view.img_show .img_wrap{
  width: 235rpx;
  height: 235rpx;
  padding: 10rpx;
  box-sizing: border-box;
  float: left;
}
.page_service_order .list .ul .li .li_body>view.img_show image{
  display: block;
  width: 225rpx;
  height: 225rpx;
}

.page_service_order .list .title{
  padding: 0 16rpx;
  box-sizing: border-box;
}
.page_service_order .list .ul{
  margin-bottom: 20rpx;
}

/* 遮罩层 */
.mask{
  display: block;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 88;
}
.popup_img{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 100%;
  z-index: 99;
}
.popup_img image{
  width: 100%;
}