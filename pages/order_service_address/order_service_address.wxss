.page__bd {
  padding-bottom: 110rpx;
}

.ul {
  border-top: 1rpx solid #efefef;
}

.li {
  background: #fff;
  margin-bottom: 20rpx;
}

.ul .weui-cell {
  padding: 0 24rpx;
}

.ul .weui-cell::before {
  left: 0;
  border-color: #efefef;
  display: none;
}

.ul .li_hd {
  height: 80rpx;
}

.ul .li_hd {
  font-size: 28rpx;
  color: #000;
}

.ul .li_hd .weui-cell__bd {
  text-align: right;
}

.ul .li_bd {
  height: 100rpx;
  color: #9d9d9d;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 10rpx 24rpx;
  text-align: left!important;
}

.ul .li_ft {
  height: 80rpx;
  font-size: 24rpx;
}

.ul .li_ft::before {
  display: block;
}

.ul .li_ft .weui-cell__hd {
  /* color: #41b396; */
  vertical-align: middle;
}

.ul .li_ft .weui-cell__hd text {
  position: relative;
  top: 4rpx;
}

.ul .li_ft .weui-cell__bd {
  text-align: right;
}

.ul .li_ft image {
  width: 36rpx;
  position: relative;
  top: 6rpx;
  margin-left: 20rpx;
  margin-right: 5rpx;
}

.ul .li_ft .weui-cell__bd view {
  display: inline-block;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background: #48cfad;
  z-index: 2;
}

label:active, .li_ft .weui-cell__bd view:active, .footer:active {
  opacity: 0.7;
}
.popup.active ,
.mask.active {
  display: block;
}
.popup,
.mask{
  display: none;
}
.popup {
  display: none;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding-bottom: 95rpx;
  z-index: 9999;
  background: #fff;
}
form{
  height: 720rpx;
  font-size: 32rpx;
  color: #6d6d6d
}
form .footer {
  position: absolute;
  z-index: 9999;
}

form .weui-cells {
  height: 624rpx;
}

form .weui-cell {
  padding: 0 0 0 48rpx;
  height: 98rpx;
  line-height: 98rpx;
      font-size: 32rpx;
  color: #6d6d6d

}

form .weui-cell:before {
  left: 48rpx;
  bottom: 0;
  top: inherit;
  border-color: #efefef;
}

form .weui-cell:first-of-type::before {
  display: none;
}

form .weui-cells::after, form .weui-cells::before {
  display: none;
}

form .weui-cells-title {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  color: #353535;
}
