
.weui-panel__bd .icon {
  width: 14rpx;
  height: 24rpx;
  position: absolute;
  top: 50%;
  right: 16rpx;
  transform: translateY(-50%);
  opacity: 0.5;
  transition: all 0.3s;
}
.weui-media-box{
  padding: 30rpx;
}

/* 个人信息 */
.userinfo .weui-media-box__hd{
  border-radius: 50%;
  overflow: hidden;
  margin-right:50rpx;
  border: 4rpx solid #48cfad;
  box-shadow: 0 0 0 4rpx #c8f1e6;
}
.userinfo .weui-media-box__bd .weui-media-box__title{
    font-size: 24rpx;
}
.userinfo .weui-media-box__bd .weui-media-box__desc{
  font-size: 30rpx;
}
.userinfo .weui-media-box__bd .weui-media-box__desc text{
  color: #41b396;
  margin-left: 5rpx;
}
.userinfo.weui-panel::after,
.userinfo.weui-panel::before,
.userinfo .weui-media-box::before{
  display: none!important;
}

/* 钱包 */
.section_money{
  padding: 40rpx 45rpx;
}
.section_money .content{
  position: relative;
  height: 260rpx;
  border-radius: 20rpx;
  color: #ffffff;
  background: linear-gradient(to right, #3ba0b0, #3eb89a);
}
.section_money .content .text{
  position: absolute;
  top: 40rpx;
  left: 50rpx;
  font-size: 36rpx;
}
.section_money .content .num{
  position: absolute;
  top: 130rpx;
  left: 50rpx;
  font-size: 35rpx;
}
.section_money .content .num text{
  font-size: 55rpx;
}
.section_money .content .go{
    position: absolute;
  top: 100rpx;
  right: 30rpx;
  width: 120rpx;
  height: 55rpx;
  box-sizing: border-box;
  border: 1px solid #ffffff;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
  vertical-align: middle;
}

/* 列表 */
.list .weui-media-box__hd_in-appmsg{
  width: 55rpx;
  height: 55rpx;
}
.list.weui-panel::after,
.list.weui-panel::before{
  display: none!important;
}