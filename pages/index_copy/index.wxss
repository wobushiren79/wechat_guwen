/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #353535;
}

.usermotto {
  margin-top: 200px;
}




/*打电话*/

.call_phone {
  font-size: 34rpx;
  color: #48cfad;
  margin-bottom: 80rpx;
  position: relative;
  z-index: 99;
}

.call_phone image {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  top: 15rpx;
}

.weui-cell::before {
  border-color: #e3e3e3;
}

.namenum text, .namenum .exit {
  display: inline-block;
}

.namenum .exit {
  color: #48cfad;
  margin-left: 10rpx;
}

.placeholder {
  padding: 0 10px;
  text-align: center;
  background-color: #ebebeb;
  height: 2.3em;
  line-height: 2.3em;
  color: #cfcfcf;
}

.userinfo {
  background: #fff;
  position: relative;
}

.userinfo view.num {
  position: absolute;
  /*background-color: #48cfad;*/
  width: 180rpx;
  height: 60rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  text-align: center;
  top: 50%;
  right: 15px;
  background: linear-gradient(to right, #48cfad 0%, #7fffeb 100%);
}

.userinfo>.exit {
  position: fixed;
  top: 16rpx;
  right: 15px;
  color: #48cfad;
  font-size: 28rpx;
}

.info,
.server {
  background-color: #fff;
  text-align: center;
  height: 150rpx;
  padding-top: 20px;
}

.info view,
.server view{
  font-size: 28rpx;
  color: #353535;
  margin-bottom: 30rpx;
  margin-top: -10rpx;
}

.info text {
  font-size: 54rpx;
  color: #48cfad;
}

.info .weui-flex__item ,
.server .weui-flex__item {
  border-left: 1rpx solid #d9d9d9;
  height: 130rpx;
  text-align: center;
}
.server black,
.tab_title black{
  display: block;
  width: 100%;
}
.info .weui-flex__item:first-child,
.server .weui-flex__item:first-child  {
  border-left: none;
}

.server view{
  margin-bottom: 0rpx;
}
.server image {
vertical-align:middle;
width:100rpx;
height:100rpx;
}
.search {
  background: #ffffff;
}
.search image{
  height: 70rpx;
  width: 100%;
}


/* 列表 */
.tab_title{
  height: 100rpx;
  font-size: 28rpx;
  line-height: 100rpx;
  text-align: center;
  background: #ffffff;
  margin-top: 5px;
}
.tab_title .weui-flex__item{
  position: relative
}
.tab_title .weui-flex__item text{
 border-bottom: 1px solid #ffffff;
 padding-bottom: 5px;
}
.tab_title .weui-flex__item.active text{
 border-bottom: 1px solid #48cfad;
 color: #48cfad
}
.tab_content .ul .li {
  display: flex;
  position: relative;
  border-top: 1px solid #fafafa;
  background-color: #fff;
  padding: 8rpx 0;
  height: 224rpx;
  box-sizing: border-box;
}

.tab_content .ul .li .li_img {
  flex-basis: 208rpx;
  width: 208rpx;
  height: 208rpx;
}

.tab_content .ul .li .li_content {
  flex: 1;
  padding-left: 16rpx;
  
}

.tab_content .ul .li .li_content .title {
  font-size: 30rpx;
  color: #353535;
  height: 100rpx;

}

.tab_content .ul .li .li_content .money {
  color: #fc8383;
  position: absolute;
  bottom: 50rpx;
}
.tab_content .ul .li .li_content .money .s{
  font-size: 28rpx;
}
.tab_content .ul .li .li_content .money .b{
  font-size: 46rpx;
}
.tab_content .ul .li .li_content .num {
  font-size: 24rpx;
  color: #bcbcbc;
  position: absolute;
  bottom: 8rpx;
  margin-left: -4rpx;
}
.tab_content .ul .li .li_content .btn {
  width: 130rpx;
  height: 70rpx;
  font-size: 26rpx;
  color: #fff;
  position: absolute;
  bottom: 8rpx;
  right: 20rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 5rpx;
  box-sizing: border-box;
  padding-right:4rpx;
}
.tab_content .ul .li .li_content .btn1{
   background: #48cfad;
}

.tab_content .ul .li .li_content .btn2{
  background: linear-gradient(to left, #48cfad, #85ecdc);
}
.tab_content .ul .li .li_content image{
  position: absolute;
  width: 14rpx;
  height: 24rpx;
  bottom: 5px;
  right: 15px;
}