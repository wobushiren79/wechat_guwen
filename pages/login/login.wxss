/**login.wxss**/
page,
.page,
swiper,
swiper-item{
  height: 100%
}
/*logo*/

.page__title image {
  width: 100rpx;
  height: 100rpx;
}

.page__hd {
  padding: 100rpx;
}

/*按钮*/

.weui-btn-area {
  margin-top: 60rpx;
}

.weui-btn-area button {
  background-color: #48cfad;
  color: #fff;
  border: none;
  outline: none;
}

/*下划线*/

.weui-cell::before {
  right: 15px;
}

/*页脚*/

.foot {
  display: block;
  width: 100%;
  text-align: center;
  color: #48cfad;
  position: fixed;
  bottom: 80rpx;
  left: 50%;
  transform: translate(-50%, 0);
}

.foot navigator {
  display: inline-block;
  padding: 0 10px;
  border-left: 1px solid #48cfad;
  font-size: 17px;
  line-height: 17px;
}

.foot navigator:first-of-type {
  border-left: none;
}

.weui-cells {
  background-color: transparent;
}

.weui-cells::after, .weui-cells::before {
  border: none;
}

.weui-cells {
  margin-bottom: 30px;
}

/*.weui-cell:first-child::before{
  display: block;
}*/

.weui-cell::before {
  display: block !important;
  top: 44px;
  border-top: 1rpx solid #d9d9d9;
}

.weui-cells {
  margin-bottom: 15px;
}

.weui-flex {
  margin-bottom: 30px;
}

.weui-flex .weui-flex__item {
  padding: 0 15px;
}

.weui-flex .weui-flex__item:first-of-type {
  text-align: right;
}

.banner{
  display: block;
  width: 400rpx;
  margin: 70rpx auto 0 auto;
}
