<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml"> 
  <view class="page__bd page_service_order page_allot_order_list page_allot_order_list2">
    <!--选项卡-->
    <view class="tab">
      <view>
        <navigator url="../order_list_wait/order_list_wait" open-type="redirect">待接单</navigator>
      </view>
      <view>
        <navigator url="../order_list_processing/order_list_processing" class="active" open-type="redirect">处理中</navigator>
      </view>
      <view>
        <navigator url="../order_list_audit/order_list_audit" open-type="redirect">审核中</navigator>
      </view>
      <view>
        <navigator url="../order_list_finish/order_list_finish" open-type="redirect">已完成</navigator>
      </view>
    </view>

    <!-- 列表 -->
    <view class="list">
      <view class="ul">


        <!-- 模板1 待接单 star-->
        <block wx:for="{{listdata}}">
          <view class="li">
            <block wx:if="{{item.workOrder.orderType==0}}">
              <view class="li_header plan">
                <view class="header">
                  <image src='../../../images/icon_order_list_plan.png' mode='widthFix'></image>
                </view>
                <view class='body'>
                  殡仪/{{item.workOrder.orderNumber}}
                </view>
              </view>
            </block>
            <block wx:elif="{{item.workOrder.orderType==1}}">
              <view class="li_header cem">
                <view class="header">
                  <image src='../../../images/icon_order_list_cem.png' mode='widthFix'></image>
                </view>
                <view class='body'>
                  公墓/{{item.workOrder.orderNumber}}
                </view>
              </view>
            </block>
            <block wx:elif="{{item.workOrder.orderType==2}}">
              <view class="li_header other">
                <view class="header">
                  <image src='../../../images/icon_order_list_other.png' mode='widthFix'></image>
                </view>
                <view class='body'>
                  其它/{{item.workOrder.orderNumber}}
                </view>
              </view>
            </block>
            <navigator class="li_body" url="/pages/order_center/order_content/order_content?orderId={{item.workOrder.id}}" hover-class="active">
              <image src="../../../images/right.png" class="icon"></image>
              <view>
                <view class="header">
                  服务地址：
                </view>
                <view class="body">
                  {{item.customerInfo.address}}
                </view>
              </view>
              <view>
                <view class="header">
                  预约时间：
                </view>
                <view class="body">
                  {{item.workOrder.appointmentTime}}
                </view>
              </view>
              <view>
                <view class="header">
                  服务类型：
                </view>
                <block wx:if="{{item.workOrder.orderType == 0}}">
                  <view class="body">
                    殡仪
                  </view>
                </block>
                <block wx:elif="{{item.workOrder.orderType == 1}}">
                  <view class="body">
                    公墓
                  </view>
                </block>
                <block wx:elif="{{item.workOrder.orderType == 3}}">
                  <view class="body">
                    其他
                  </view>
                </block>
              </view>
              <!-- <view>
                <view class="header">
                  联系人：
                </view>
                <view class="body">
                  {{item.customerInfo.contactName}}
                </view>
              </view> -->
              <!-- <view>
                <view class="header">
                  经办人：
                </view>
                <block wx:if="{{item.customerInfo.agentName !== null || item.customerInfo.agentName !== ''}}">
                  <view class="body">
                    未分配
                  </view>
                </block>
                <block wx:else>
                  <view class="body">
                    {{item.customerInfo.agentName}}
                  </view>
                </block>
              </view> -->
              <!-- <block wx:if="{{item.customerInfo.serviceTarget.length>0}}">
                <view>
                  <view class="header">
                    服务对象：
                  </view>
                  <view class="body">
                    {{item.customerInfo.serviceTarget}}
                  </view>
                </view>
              </block> -->
              <view>
                <view class="header">
                  派单时间：
                </view>
                <view class="body">
                  {{updateTime[index]}}
                </view>
              </view>
              <view>
                <view class="header">
                  描述：
                </view>
                <view class="body">
                  {{item.workOrder.orderDescribe}}
                </view>
              </view>
            </navigator>
          </view>
        </block>
      </view>
    </view>

    <navigator class='fix_new' url='../../new_easy/new_easy'>
      <text>＋</text>
    </navigator>
  </view>
  <block wx:if="{{notNumber}}">
    <view class='prompt'>
      <text>没有更多订单啦</text>
    </view>
  </block>

</view>