                <view class="weui-label">公墓接待</view>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" value="{{cemeteryReceive}}" disabled="disabled" />
              </view>
            </view>
          </view>
        </form>
      </view>
    </template>
    <view wx:for="{{gmList}}">
      <template is="list_b" data="{{...item}}" />
    </view>

