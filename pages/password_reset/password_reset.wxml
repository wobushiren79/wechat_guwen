<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__hd">
    <view class="page__title">
      <image src="{{logo_src}}"></image>
    </view>

  </view>
  <view class="page__bd">
    <form bindsubmit="formSubmit">
      <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>

      <view class="weui-cells weui-cells_after-title">
        <form class="phonenum" bindsubmit='phoneData'>
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
              <view class="weui-label">手机号</view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请输入手机号" name="mobile" maxlength='11' value="{{value3}}" />
            </view>
            <view class="weui-cell-ft">
              <!-- <button  type="submit">获取验证码</button> -->
              <button class="{{selected?'phone_huo':'hidden'}}" disabled="disabled" bindtap="countdown">再次获取({{second}})</button>
              <button class="{{selected1?'phone_huo':'hidden'}}" formType="submit">获取验证码</button>
            </view>
          </view>
        </form>
        <block wx:if="{{xianshi}}">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">验证码</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" placeholder="请输入验证码" name="msgCode" value="{{value4}}" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">新密码</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" placeholder="请输入新密码" name="keys" value="{{value4}}" />
          </view>
        </view>
        </block>
      </view>


<block wx:if="{{xianshi}}">
      <view class="weui-btn-area">
        <button class="weui-btn" type="primary"  formType="submit">确定</button>
      </view>
</block>

    </form>



  </view>

</view>