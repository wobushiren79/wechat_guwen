<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__bd clearfix">

    <!--搜索-->
    <view class="search">
      <input type="text" placeholder="请输入您要查找的商品" />
      <image src="../../images/search.png"></image>
    </view>

    <!-- 筛选 -->
    <view class="tab_title clearfix">
      <view class="active1" wx:if="{{xiaoliang}}" >
        <text>销售量</text>
      </view>
      <view class="" wx:else bindtap="xiaoliang">
        <text>销售量</text>
      </view>

      <view class="active2" wx:if="{{jiage == 1}}" bindtap="jiage2">
        <text>价格</text>
        <image src="../../images/down.png"></image>
      </view>

      <view class="active1" wx:elif="{{jiage == 0}}" >
        <text>价格</text>
        <image src="../../images/down.png"></image>
      </view>

      <view class="" wx:else bindtap="jiage1">
        <text>价格</text>
        <image src="../../images/down.png"></image>
      </view>
      
      <view class="">
        <navigator url="../service/service" open-type="navigateBack">
          筛选
        </navigator>
      </view>

    </view>

    <!-- 列表 -->
    <view class="tab_content">
      <view class="ul">
<black wx:for="{{list}}">
        <navigator url="../service_content/service_content?goods_id={{item.id}}" class="li">
          <image class="li_img" src="http://wechat.e-funeral.cn/Public/Uploads/{{item.title_img}}"></image>
          <view class="li_content">
            <view class="title aui-ellipsis-1">
              <text>{{item.name}}</text>
              <text> {{item.goods_slogan}}</text>
            </view>
            <view class="money">
              ￥<text>{{item.price}}</text>
            </view>
            <view class="num">
              销售量<text>{{item.sale_amount}}</text>
            </view>
            <image src="../../images/right.png"></image>
          </view>
        </navigator>
</black>
      </view>
    </view>
  </view>
</view>