.footerfix {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  background: #ffffff;
}

.footerfix .server, .footerfix .shop, .footerfix .shopping, .footerfix .buy {
  float: left;
  height: 100rpx;
}

.footerfix .server, .footerfix .shop {
  width: 125rpx;
  background: #fff;
  color: #c3c3c3;
  font-size: 24rpx;
  position: relative;
}

.footerfix .server text, .footerfix .shop text {
  display: block;
}
.footerfix .shop text.num{
  display: block;
  width: 28rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  border-radius: 50%;
  background-color: #fc8383;
  color: #ffffff;
  position: absolute;
  top: 6rpx;
  right: 28rpx;
  font-size: 16rpx;
}
.footerfix .server image, .footerfix .shop image {
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx auto;
}

.footerfix .shopping, .footerfix .buy {
  width: 250rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 100rpx;
}

.footerfix .shopping {
  /* background: #48cfad; */
  background: linear-gradient(to left, #48cfad, #85ecdc);
}

.footerfix .buy {
  /* background: #29ae8c; */
  background: linear-gradient(to left, #3eb99a, #269080);
}

.popup {
  position: fixed;
  width: 690rpx;
  height: 665rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
  background: #fff;
  padding: 15px;
  box-sizing: border-box;
}

.popup .dt {
  color: #48cfad;
  font-size: 32rpx;
  margin-bottom: 26rpx;
}

.popup .dd {
  color: #353535;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: flex;
}

.popup .dd .name {
  flex: 3;
}

.popup .dd .money {
  flex: 1;
  text-align: right;
}

.useinfo {
  background: #fff;
  padding: 15rpx;
  box-sizing: border-box;
  color: #353535;
  margin-bottom: 15px;
}

.useinfo .dt {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx 0;
}

.useinfo .dd {
  color: #353535;
  font-size: 28rpx;
  display: flex;
}

.useinfo .dd>view:first-of-type {
  flex: 3;
}

.useinfo .dd>view:last-of-type {
  flex: 1;
  text-align: right;
}
