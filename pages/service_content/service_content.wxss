/**login.wxss**/

.page__bd {
  padding-bottom: 120rpx;
}

.slide-image, swiper {
  width: 100%;
  height: 750rpx;
}

.slide-image image {
  width: 100%;
  height: 100%;
}

/* 基本信息 */

.goods_info {
  padding: 16rpx;
  background: #fff;
  margin-bottom: 15px;
}

/* 名字 */

.goods_info .nametext {
  font-size: 32rpx;
  color: #353535;
}

/* 价格 */

.goods_info .money {
  font-size: 42rpx;
  color: #fc8383;
  margin: 10rpx 0;
  position: relative;
  left:-10rpx;

}

.goods_info .money image {
  position: absolute;
  width: 45rpx;
  height: 35rpx;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

/* 其他 */

.goods_info .other {
  font-size: 22rpx;
  color: #8a8a8a;
  display: -webkit-flex;
  display: flex;
}

.goods_info .other>view {
  flex: 1;
}

.goods_info .other>view:nth-of-type(2) {
  text-align: center;
}

.goods_info .other>view:nth-of-type(3) {
  text-align: right;
}

.goods_info .other>view.moneyed view {
  display: inline-block;
  position: relative;
}

.goods_info .other>view.moneyed view .hr {
  display: inherit;
  width: 100%;
  border-bottom: 1px solid #8a8a8a;
  position: absolute;
  top: 50%;
  left: 0;
}

/* 商品规格 */

.goods_size {
  padding: 0 16rpx;
  background: #fff;
  margin-bottom: 15px;
}

.goods_size .show {
  position: relative;
  font-size: 28rpx;
  color: #353535;
  padding: 18rpx 0;
}

.goods_size .show image {
  width: 14rpx;
  height: 24rpx;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  opacity: 0.5;
}

.goods_size .hide {
  border-top: 1px solid #efefef;
}

.goods_size .hide>view {
  display: -webkit-flex;
  display: flex;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.goods_size .hide>view .title {
  flex-basis: 170rpx;
   color: #8a8a8a; 
}

.goods_size .hide>view.item {
  margin-top: 10rpx;
}

.goods_size .hide>view.item .title {
  margin-top: 10rpx;
}

.goods_size .hide>view .content .btn {
  display: inline-block;
  /* width: 140rpx; */
  padding-left: 15rpx;
  padding-right: 15rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #353535;
  background: #e8f0ee;
  margin-right: 20rpx;
  margin-top: 10rpx;
  border-radius: 5px;
}

.goods_size .hide>view .content .btn.btn_dis {
  color: #a5a5a5;
}

.goods_size .hide>view .content .btn.btn_active {
  color: #fff;
  background: #48cfad;
}

.goods_size .hide>view.num .content  button,
.goods_size .hide>view.num .content  text {
  display: inline-block;
  width: 70rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  overflow: auto;
  padding: 0;
  margin: 0;
  border: 1px solid #bfbfbf;
  background-color: #fff;
}
.goods_size .hide>view.num .content  button{
  line-height: 56rpx;
  box-sizing: border-box;
}
.goods_size .hide>view.num .content  button:first-of-type{
  color: #727272!important;
}
.goods_size .hide>view.num .content  button::after {
  display: none;
  border: none;
}

.goods_size .hide>view.num .content  button:first-of-type {
  border-radius: 5px 0 0 5px;
}

.goods_size .hide>view.num .content  button:last-of-type {
  border-radius: 0 5px 5px 0;
}

.goods_size .hide>view.num .content  text {
  border-left: none;
  border-right: none;
  box-sizing: border-box;
}

