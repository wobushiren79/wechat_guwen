/**login.wxss**/

.page__bd {
  padding-bottom: 120rpx;
}

checkbox-group {
  background: #fff;
  margin-bottom: 15px;
}

checkbox-group .group_item {
  padding: 8rpx 0;
  box-sizing: border-box;
}

checkbox-group .group_item>view {
  box-sizing: border-box;
  float: left;
}

checkbox-group .checkbox_wrap {
  width: 10.6666%;
  float: left;
}

checkbox-group checkbox {
  margin-right: 28rpx;
  border-radius: 50%;
  border: none;
  vertical-align: middle;
  padding-left: 16rpx;
}

checkbox-group .group_title {
  font-size: 30rpx;
  color: #353535;
  padding-top: 22rpx;
  padding-bottom: 22rpx;
  border-bottom: 1px solid #efefef;
}

checkbox-group .group_title .name {
  float: left;
  width: 70%;
  line-height: 48rpx;
}

checkbox-group .group_item .checkbox_wrap {
  margin-top: 70rpx;
}

checkbox-group .group_title .edit, checkbox-group .group_title .over {
  text-align: right;
  float: right;
  padding-right: 16rpx;
  line-height: 55rpx;
}

checkbox-group .group_item .img_wrap {
  /* padding: 8rpx 0; */
  float: left;
  width: 26%;
    position: relative;
}

checkbox-group .group_item image {
  width: 100%;
  height: 195rpx;
  display: block;
}

checkbox-group .group_item  .info {
  padding: 0 16rpx;
  position: relative;
  height: 195rpx;
  float: left;
  width: 63.333333%;
  box-sizing: border-box;
}

checkbox-group .group_item  .info .name {
  font-size: 30rpx;
  color: #353535;
  line-height: 1.2;
  height: 70rpx;
}

checkbox-group .group_item  .info .size, checkbox-group .group_item .edit .size {
  font-size: 24rpx;
  color: #767676;
  height: 55rpx;
  line-height: 55rpx;
}

checkbox-group .group_item  .info .money, checkbox-group .group_item  .info .num {
  font-size: 30rpx;
  position: absolute;
  bottom: 0prx;
}

checkbox-group .group_item  .info .money {
  color: #fc8383;
  left: 16rpx;
}

checkbox-group .group_item  .info .num {
  color: #767676;
  right: 16rpx;
}

checkbox-group .group_item .edit {
  height: 195rpx;
  padding: 0 16rpx;
  position: relative;
  width: 49.33333%;
  float: left;
  box-sizing: border-box;
}

checkbox-group .group_item .edit .num {
  margin-bottom: 50rpx;
}

checkbox-group .group_item .edit button {
  display: inline-block;
  padding: 0;
  margin: 0;
  line-height: 92rpx;
  height: 92rpx;
  width: 60rpx;
  outline: none;
  border: 1px solid #fff;
  background: #fff;
  overflow: inherit;
  color: #898989;
  font-size: 50rpx;
}

checkbox-group .group_item .edit button:first-of-type {
  color: #989898;
}

checkbox-group .group_item .edit button::after {
  display: none;
  border: none;
}

button::after {
  display: none !important;
}

checkbox-group .group_item .edit .num input {
  display: inline-block;
  /*line-height:92rpx;*/
  height: 60rpx;
  width: 215rpx;
  text-align: center;
  font-size: 36rpx;
  position: relative;
  top: 13rpx;
}

checkbox-group .group_item .delete {
  background: #fc8383;
  color: #fff;
  height: 195rpx;
  line-height: 195rpx;
  text-align: center;
  float: right;
  /* top: 8rpx; */
  width: 13.33333%;
  /* margin: -8rpx 0; */
  position: relative;
  z-index: 8;
}

.footerfix {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  background: #fff;
  border-top: 1px solid #efefef;
  z-index: 99;
}

.footerfix .all, .footerfix .home, .footerfix .count, .footerfix .buy {
  float: left;
  height: 100rpx;
  line-height: 100rpx;
}

.footerfix .all checkbox {
  padding: 0 16rpx;
}

.footerfix .all text {
  font-size: 28rpx;
  color: #353535;
}

.footerfix .home {
  padding: 0 16rpx;
}

.footerfix .home image {
  width: 14rpx;
  height: 24rpx;
  display: inline-block;
  transform: rotate(180deg);
  margin: 4rpx;
  position: relative;
  top: 7rpx;
}

.footerfix .home navigator {
  display: inline-block;
  color: #353535;
  font-size: 24rpx;
}

.footerfix .count {
  color: #353535;
  font-size: 24rpx;
  width: 370rpx;
  text-align: right;
}

.footerfix .count text {
  color: #fc8383;
  font-size: 28rpx;
}

.footerfix .buy {
  width: 250rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 100rpx;
  float: right;
}

.footerfix .buy {
  /* background: #29ae8c; */
  background: linear-gradient(to left, #3eb99a, #269080);
}
